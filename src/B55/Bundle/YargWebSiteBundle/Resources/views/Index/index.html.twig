{% extends 'B55YargBundle::layout.html.twig' %}
{% set active = 'homepage' %}

{% block content %}
  <div class="jumbotron masthead">
    <div class="container">
      <div class="hero-unit">
        <h1>Yarg</h1>
        <p>
          {{ 'yargws.intro'|trans }}
        </p>
        <p>
          {{ 'yargws.disclaimer'|trans }}
        </p>
        <p>
          <a class="btn btn-large btn-primary" href="https://lab.bacardi55.org/bacardi55/yarg/blob/master/README.md">{{ 'yargws.learn_more' | trans }}</a>
        </p>
      </div>

      <div class="container">
        <ul class="thumbnails">
          <li class="span4">
            <div class="thumbnail">
              <h3>{{ 'yargws.description.main_features'|trans }}</h3>
              <p>
                <ul>
                  <li>{{ 'yargws.description.opensource' | trans }}</li>
                  <li>{{ 'yargws.description.multiusers' | trans }}</li>
                  <li>{{ 'yargws.description.multicvs' | trans }}</li>
                  <li>{{ 'yargws.description.i18n' | trans }}</li>
                  <li>{{ 'yargws.description.publish_ch' | trans }} <icon class="icon-question-sign"></i></li>
                  <li>{{ 'yargws.description.more_to_come' | trans}} <a href="https://lab.bacardi55.org/bacardi55/yarg/issues">{{ 'yargws.description.roadmap' | trans }}</a></li>
                </ul>
              </p>
            </div>
          </li>
          <li class="span4">
            <div class="thumbnail">
              <h3>{{ 'yargws.last_published_cvs' | trans }}</h3>
              <p>
                <ul>
                  {% for cv in lastPublishedCvs %}
                    <li><a href="{{ path('yarg_show_public_cv', {'user_slug': cv.user.usernamecanonical, 'cv_slug': cv.slug}) }}">{{ cv.title }}</a> by {{ cv.user.username }}</li>
                  {% else %}
                    <li>{{ 'yargws.no_published_cv' | trans }}</li>
                  {% endfor %}
                </ul>
              </p>
            </div>
          </li>
          <li class="span4">
            <div class="thumbnail">
              <h3>{{ 'yargws.run_with' | trans }}</h3>
              <p>
                <ul>
                  <li>PHP >= 5.3</li>
                  <li>Framework Symfony2 and all the usefull bundles</li>
                  <li>ORM Doctrine (this instance runs with MySQL)
                  <li>Twitter Bootstrap</li>
                  <li>â€¦</li>
                </ul>
              </p>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
{% endblock %}

