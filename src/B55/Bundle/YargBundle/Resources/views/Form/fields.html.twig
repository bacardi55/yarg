{% block form_row %}
{% spaceless %}
    <div class="form_row">
        <div class="control-group">
            {{ form_label(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            {% if required %}
                <span class="required" title="This field is required"> *</span>
            {% endif %}
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}
